;RunFile=A-Games:B/BombPacCD32AGAAminet/BombPacCD32AGAAminet.Slave

; Favourites Mode
IF EXISTS ENV:favouritesmode
  execute S:AGS2Favourites "B" "BombPac AGA CD32 Aminet"
  IF $favouritesmode EQ "add"
